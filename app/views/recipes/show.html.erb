<div class="row mb-5">
  <div class="col">
    <%= link_to 'View all recipes', root_path %>
  </div>
</div>

<div class="row">
  <div class="col col-lg-6">
    <%= render partial: 'image', locals: { recipe: @recipe } %>
  </div>

  <div class="col col-lg-6">
    <h1 class="mb-3"><%= @recipe.title %></h1>

    <% if @recipe.chef&.name.present? %>
      <i class="chef-name">by <%= @recipe.chef&.name %></i>
    <% end %>

    <% (@recipe.tags || []).each do |tag| %>
      <span class="badge badge-light">
        <%= tag.name %>
      </span>
    <% end %>

    <p class="mt-3">
      <%= render_markdown(@recipe.description) %>
    </p>
  </div>
</div>
